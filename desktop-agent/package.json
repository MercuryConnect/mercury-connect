{
  "name": "mercury-remote-agent",
  "version": "1.0.0",
  "description": "Mercury Holdings Remote Desktop Agent - Enables secure remote support sessions",
  "main": "dist/main/index.js",
  "author": {
    "name": "Mercury Holdings",
    "email": "support@mercuryholdings.co"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MercuryHoldings/mercury-connect.git"
  },
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "package": "electron-builder",
    "package:win": "electron-builder --win",
    "package:mac": "electron-builder --mac",
    "package:linux": "electron-builder --linux"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@nut-tree-fork/nut-js": "^4.2.6",
    "electron-store": "^8.1.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.mercuryholdings.remote-agent",
    "productName": "Mercury Remote Agent",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "resources/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "resources/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "resources/icon.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "resources/icon.png",
      "category": "Utility"
    },
    "publish": null,
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico"
    }
  }
}
